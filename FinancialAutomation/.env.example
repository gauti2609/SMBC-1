# Financial Automation - Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DB_TYPE=postgresql

# PostgreSQL Connection (use either DB_* or POSTGRES_* variables)
# Option 1: DB_* variables
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=financial_automation
# DB_USER=fin_app_user
# DB_PASSWORD=YourPassword

# Option 2: POSTGRES_* variables (compatible with existing setup)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=financial_automation
POSTGRES_USER=fin_app_user
POSTGRES_PASSWORD=FinApp@2025

# Connection Pool Settings (use either naming)
POSTGRES_MIN_CONN=2
POSTGRES_MAX_CONN=10

# Optional: SSL Mode
DB_SSLMODE=prefer

# Optional: Connection Timeout (seconds)
DB_TIMEOUT=10
